<GlowList>:
    border_radius: ('10dp', )
    padding: ('10dp', )
    GlowRecycleView:
        id: glow_list_view
        data: root._formatted_list_data
        effect_cls: root.effect_cls
        viewclass: root.viewclass
        SelectableRecycleBoxLayout:
            id: glow_list_layout
            default_size_hint: (1, None)
            orientation: 'vertical'
            default_height: '56dp'

            size_hint_min:( self.minimum_width, None)
            height: self.minimum_height
            touch_multiselect: True
            size_hint: (1, None)
            multiselect: True

<GlowListItem>:
    border_color: app.theme_cls.divider_color
    border_width: (0, 0, 0, dp(1))
    padding: ('10dp', )
    spacing: '10dp'

<GlowSelectableListItem>:
    border_color: app.theme_cls.divider_color
    border_width: (0, 0, 0, dp(1))
    checkbox_disabled: False
    padding: ('10dp', )
    spacing: '10dp'
    GlowCheckbox:
        id: item_checkbox
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        disabled: root.checkbox_disabled
