<GlowPaginator>:
    adaptive_size: True
    spacing: '20dp'
    GlowLabel:
        id: glow_paginator_info
        adaptive_size: True
    GlowButton:
        id: glow_paginator_button_previous
        icon: 'chevron-left'
        adaptive_size: True
        mode: 'outline'
        on_release:
            root._previous_page()
    GlowButton:
        id: glow_paginator_button_next
        icon: 'chevron-right'
        adaptive_size: True
        mode: 'outline'
        on_release:
            root._next_page()
