<GlowTable>:
    border_radius: ('10dp', )
    padding: ('10dp', )
    GlowScrollView:
        id: glow_table_header
        size_hint_y: None
        do_scroll: False
        border_width: (0, 0, 0, 1)
        border_color: app.theme_cls.divider_color
    GlowRecycleView:
        id: glow_table_view
        data: root._display_table_data
        effect_cls: root.effect_cls
        viewclass: root._viewclass
        SelectableRecycleBoxLayout:
            id: glow_table_layout
            default_height: '56dp'
            orientation: 'vertical'
            default_size_hint: (1, None)

            size_hint_min: (self.minimum_width, None)
            height: self.minimum_height
            touch_multiselect: True
            size_hint: (1, None)
            multiselect: True
    GlowBoxLayout:
        id: glow_table_paginator_container
        orientation: 'vertical'
        adaptive_height: True
        padding: ('10dp', )

<GlowTableRow>:
    border_width: (0, 0, 0, 1)
    border_color: app.theme_cls.divider_color
    padding: ('10dp', )
    spacing: dp(5)
